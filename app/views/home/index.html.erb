<h3>Empresa</h3>

<ul>
  <% @companies.each do |comp| %>
    <li> <%= link_to comp.name, root_path(company_id: comp.id) %> </li>
  <% end %>
</ul>

<% @jobs.each do |job| %>
  <h3><%= job.title %></h3>
  <p><%= job.company.name %></p>
  <p><%= job.location %></p>
  <p>
    <%= job.category %>
  </p>
  <p>
    <%= job.description %>
  </p>
  <%= link_to 'Ver mais', job %>
<% end %>
